{
  "name": "rung-vscode",
  "displayName": "Rung - Stacked PRs",
  "description": "Visualize and manage stacked PRs with rung",
  "version": "0.1.0",
  "publisher": "rung",
  "repository": {
    "type": "git",
    "url": "https://github.com/auswm85/rung"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:.git/rung"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rung",
          "title": "Rung Stack",
          "icon": "resources/rung-logo.svg"
        }
      ]
    },
    "views": {
      "rung": [
        {
          "icon": "resources/rung-logo.svg",
          "id": "rungStack",
          "name": "Stack"
        }
      ]
    },
    "commands": [
      {
        "command": "rung.refresh",
        "title": "Rung: Refresh Stack",
        "icon": "$(refresh)"
      },
      {
        "command": "rung.sync",
        "title": "Rung: Sync Branch",
        "icon": "$(sync)"
      },
      {
        "command": "rung.sync.continue",
        "title": "Rung: Continue Sync"
      },
      {
        "command": "rung.sync.abort",
        "title": "Rung: Abort Sync"
      },
      {
        "command": "rung.submit",
        "title": "Rung: Submit PRs",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "rung.navigate.next",
        "title": "Rung: Go to Child Branch",
        "icon": "$(arrow-up)"
      },
      {
        "command": "rung.navigate.prev",
        "title": "Rung: Go to Parent Branch",
        "icon": "$(arrow-down)"
      },
      {
        "command": "rung.create",
        "title": "Rung: Create Branch",
        "icon": "$(add)"
      },
      {
        "command": "rung.compare",
        "title": "Rung: Compare with Parent",
        "icon": "$(diff)"
      },
      {
        "command": "rung.openPR",
        "title": "Rung: Open PR in Browser",
        "icon": "$(link-external)"
      },
      {
        "command": "rung.checkout",
        "title": "Rung: Checkout Branch",
        "icon": "$(git-branch)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "rung.refresh",
          "when": "view == rungStack",
          "group": "navigation@1"
        },
        {
          "command": "rung.create",
          "when": "view == rungStack",
          "group": "navigation@2"
        },
        {
          "command": "rung.submit",
          "when": "view == rungStack",
          "group": "navigation@3"
        }
      ],
      "view/item/context": [
        {
          "command": "rung.checkout",
          "when": "view == rungStack && viewItem =~ /^branch/",
          "group": "inline@1"
        },
        {
          "command": "rung.sync",
          "when": "view == rungStack && viewItem =~ /diverged|conflict/",
          "group": "inline@2"
        },
        {
          "command": "rung.compare",
          "when": "view == rungStack && viewItem =~ /^branch/",
          "group": "1_actions@1"
        },
        {
          "command": "rung.openPR",
          "when": "view == rungStack && viewItem =~ /hasPR/",
          "group": "1_actions@2"
        },
        {
          "command": "rung.navigate.next",
          "when": "view == rungStack && viewItem =~ /^branch/",
          "group": "2_navigation@1"
        },
        {
          "command": "rung.navigate.prev",
          "when": "view == rungStack && viewItem =~ /^branch/",
          "group": "2_navigation@2"
        }
      ]
    },
    "configuration": {
      "title": "Rung",
      "properties": {
        "rung.cliPath": {
          "type": "string",
          "default": "rung",
          "description": "Path to rung CLI binary"
        },
        "rung.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh on file save and git events"
        },
        "rung.refreshDebounce": {
          "type": "number",
          "default": 1000,
          "description": "Debounce time in ms for auto-refresh"
        }
      }
    }
  },
  "scripts": {
    "compile": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "watch": "npm run compile -- --watch",
    "package": "vsce package",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "esbuild": "^0.25.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.0"
  }
}
